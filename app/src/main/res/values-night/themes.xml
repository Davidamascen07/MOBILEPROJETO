<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for night mode. -->
    <style name="Theme.Mobiliap3" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_blue_dark</item> <!-- Exemplo: cor mais escura para noite -->
        <item name="colorPrimaryVariant">@color/primary_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Error colors -->
        <item name="colorError">@color/error_red</item> <!-- Deve corresponder à cor definida -->
        <item name="colorOnError">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item> <!-- Exemplo: barra de status mais escura -->
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/gray_900</item> <!-- Fundo escuro -->
        <item name="colorSurface">@color/gray_800</item> <!-- Superfície escura -->
        <item name="colorOnSurface">@color/white</item> <!-- Texto claro em superfície escura -->
    </style>

    <!-- Theme for login without action bar for night mode -->
    <style name="Theme.Mobiliap3.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_blue_dark</item>
        <item name="colorPrimaryVariant">@color/primary_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Error colors -->
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/white</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowBackground">@color/gray_900</item>
    </style>
</resources>