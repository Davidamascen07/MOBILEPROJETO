<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="16dp">

        <!-- Nome e Período -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_disciplina_nome_historico"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ANÁLISE E PROJETOS DE SISTEMAS"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/gray_800"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tv_periodo_letivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024.1"
                android:textSize="12sp"
                android:textColor="@color/gray_600"
                android:background="@drawable/periodo_badge_background"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Situação, Nota e Faltas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_situacao_historico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="APROVADO"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/accent_green"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nota:"
                android:textSize="12sp"
                android:textColor="@color/gray_600"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/tv_nota_final_historico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.20"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/gray_800"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/tv_faltas_historico"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="14 faltas"
                android:textSize="12sp"
                android:textColor="@color/gray_600"
                android:gravity="end" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
