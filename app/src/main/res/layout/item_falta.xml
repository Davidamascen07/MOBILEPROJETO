<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="20dp">

        <!-- Header da disciplina -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_disciplina_nome_falta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TÓPICOS EM DESENVOLVIMENTO MOBILE"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_800"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/tv_disciplina_codigo_falta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SINF061"
                    android:textSize="13sp"
                    android:textColor="@color/gray_600"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_status_faltas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/faltas_acima_limite"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/status_badge_acima_limite"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:layout_gravity="center_vertical"
                android:textAllCaps="true" />

        </LinearLayout>

        <!-- Faltas por mês em grid moderno -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:background="@drawable/faltas_grid_background"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jan"
                    android:textSize="10sp"
                    android:textColor="@color/gray_600" />

                <TextView
                    android:id="@+id/tv_janeiro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_800"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fev"
                    android:textSize="10sp"
                    android:textColor="@color/gray_600" />

                <TextView
                    android:id="@+id/tv_fevereiro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_800"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mar"
                    android:textSize="10sp"
                    android:textColor="@color/gray_600" />

                <TextView
                    android:id="@+id/tv_marco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_800"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Abr"
                    android:textSize="10sp"
                    android:textColor="@color/gray_600" />

                <TextView
                    android:id="@+id/tv_abril"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_800"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mai"
                    android:textSize="10sp"
                    android:textColor="@color/gray_600" />

                <TextView
                    android:id="@+id/tv_maio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_800"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jun"
                    android:textSize="10sp"
                    android:textColor="@color/gray_600" />

                <TextView
                    android:id="@+id/tv_junho"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_800"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Total e Percentual -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/total_faltas_background"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total de Faltas:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/gray_700" />

            <TextView
                android:id="@+id/tv_total_faltas_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/gray_800"
                android:layout_marginEnd="20dp" />

            <TextView
                android:id="@+id/tv_percentual_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24.0%"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/accent_red" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
